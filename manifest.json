{
  "manifest_version": 3,
  "name": "树知 TreeKnow",
  "short_name": "树知",
  "version": "1.0.1",
  "description": "AI对话思维树管理工具 - 捕获AI对话，构建知识树",
  "author": "TreeKnow Team",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "树知 TreeKnow"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.doubao.com/*",
    "https://doubao.com/*",
    "https://tongyi.aliyun.com/*",
    "https://qianwen.aliyun.com/*",
    "https://tongyi.com/*",
    "https://www.tongyi.com/*",
    "https://chat.qwen.ai/*",
    "https://qianwen.com/*",
    "https://www.qianwen.com/*",
    "https://chat.deepseek.com/*",
    "https://www.deepseek.com/*",
    "https://kimi.moonshot.cn/*",
    "https://kimi.com/*",
    "https://www.kimi.com/*",
    "https://yuanbao.tencent.com/*",
    "https://yiyan.baidu.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.doubao.com/*",
        "https://doubao.com/*",
        "https://tongyi.aliyun.com/*",
        "https://qianwen.aliyun.com/*",
        "https://tongyi.com/*",
        "https://www.tongyi.com/*",
        "https://chat.qwen.ai/*",
        "https://qianwen.com/*",
        "https://www.qianwen.com/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://kimi.moonshot.cn/*",
        "https://kimi.com/*",
        "https://www.kimi.com/*",
        "https://yuanbao.tencent.com/*",
        "https://yiyan.baidu.com/*"
      ],
      "js": [
        "lib/db.js",
        "lib/tree.js",
        "lib/drag.js",
        "lib/capture.js",
        "content/content-script.js"
      ],
      "css": [
        "styles/panel.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "icons/*"
      ],
      "matches": [
        "https://www.doubao.com/*",
        "https://doubao.com/*",
        "https://tongyi.aliyun.com/*",
        "https://qianwen.aliyun.com/*",
        "https://tongyi.com/*",
        "https://www.tongyi.com/*",
        "https://chat.qwen.ai/*",
        "https://qianwen.com/*",
        "https://www.qianwen.com/*",
        "https://chat.deepseek.com/*",
        "https://www.deepseek.com/*",
        "https://kimi.moonshot.cn/*",
        "https://kimi.com/*",
        "https://www.kimi.com/*",
        "https://yuanbao.tencent.com/*",
        "https://yiyan.baidu.com/*"
      ]
    }
  ]
}
